<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Tela3">

    <LinearLayout
        android:layout_width="291dp"
        android:layout_height="556dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Selecione um período:"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <RadioGroup
            android:id="@+id/rbgPeriodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdbManha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Manhã"
                android:textColor="#F8F8F8" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <RadioButton
                android:id="@+id/rdbTarde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tarde"
                android:textColor="#F8F8F8" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <RadioButton
                android:id="@+id/rdbNoite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:minHeight="48dp"
                android:text="Noite"
                android:textColor="#F8F8F8"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <Button
            android:id="@+id/btnNovoSalário"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="mostrarPeriodo"
            android:text="Mostrar Período"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="@android:dimen/system_app_widget_background_radius" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>